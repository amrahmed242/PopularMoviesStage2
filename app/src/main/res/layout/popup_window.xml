<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ss"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:background="@android:drawable/dialog_holo_dark_frame"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="15dp">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/bebas"
        android:text="@string/POPUP_TITLE"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:alpha="1"
        android:background="@layout/popup_button_shape"
        android:fontFamily="@font/beb"
        android:text="@string/POPUP_POPULAR_KEY"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/top_rated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:alpha="1"
        android:background="@layout/popup_button_shape"
        android:fontFamily="@font/beb"
        android:text="@string/POPUP_TOP_RATED_KEY"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />


    <Button
        android:id="@+id/favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:background="@layout/popup_button_shape"
        android:fontFamily="@font/beb"
        android:text="@string/POPUP_FAVOURITES_KEY"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

</LinearLayout>